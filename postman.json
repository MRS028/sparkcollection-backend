                  "        pm.collectionVariables.set('refreshToken', response.data.tokens.refreshToken);",
                  "        console.log('‚úÖ Access Token:', response.data.tokens.accessToken);",
                  "        console.log('‚úÖ Refresh Token:', response.data.tokens.refreshToken);",
                  "    }",
                  "    if (response.data && response.data.user && response.data.user._id) {",
                  "        pm.collectionVariables.set('userId', response.data.user._id);",
                  "        console.log('‚úÖ User ID:', response.data.user._id);",
                  "        console.log('‚úÖ User Role:', response.data.user.role);",
                  "    }",
                  "}"
