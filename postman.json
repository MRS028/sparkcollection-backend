            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{apiV1}}/auth/logout-all",
              "host": ["{{apiV1}}"],
              "path": ["auth", "logout-all"]
            },
            "description": "Logout from all devices"
          }
        }
